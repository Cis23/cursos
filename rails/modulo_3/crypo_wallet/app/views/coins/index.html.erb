<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<p> <%= puts "Dados" %> </p>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Sigla</th>
      <th>Imagem</th>
      <th>Tipe de mineração</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, width: 80, height: 60%> </td>
        <td>
          <% @miningType.map do |mt| %>
            <% if(mt.id == coin.mining_type_id) %>
              <%= mt.description %>
            <% end %>
          <% end %>
        </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('confirmacao.deletar') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>Adicionar <%= link_to 'nova moeda', new_coin_path %></p>
<p>Voltar para <%= link_to 'Home', welcome_index_path %></p>
