<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<p> <%= puts "Dados" %> </p>
<table>
  <thead>
    <tr>
      <th> <%= @coins.human_attribute_name(:description) %> </th>
      <th> <%= @coins.human_attribute_name(:acronym) %> </th>
      <th> <%= @coins.human_attribute_name(:url_image) %> </th>
      <th> <%= @coins.human_attribute_name(:mining_type) %> </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td> <%= image_tag coin.url_image, width: 80, height: 60%> </td>
        <td> <%= coin.mining_type.description %> </td>
        <td><%= link_to t('links.show'), coin %></td>
        <td><%= link_to t('links.edit'), edit_coin_path(coin) %></td>
        <td><%= link_to t('links.delete'), coin, method: :delete, data: { confirm: t('confirmacao.deletar') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p>Adicionar <%= link_to 'nova moeda', new_coin_path %></p>
<p>Voltar para <%= link_to 'Home', welcome_index_path %></p>
